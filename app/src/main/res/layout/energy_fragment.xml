<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/boder1"
        android:id="@+id/top">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageButton
                android:id="@+id/imgBtn1"
                android:layout_width="84dp"
                android:tag="1"

                android:background="#FF0000"
                android:layout_height="84dp"
                android:layout_marginStart="50dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/imgBtn2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.131"
                app:srcCompat="@drawable/ic_baseline_power_settings_new_24" />

            <ImageButton
                android:id="@+id/imgBtn2"
                android:layout_width="84dp"
                android:background="#FF0000"
                android:layout_height="84dp"
                android:layout_marginStart="50dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imgBtn1"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/ic_baseline_power_settings_new_24" />

            <ImageButton
                android:id="@+id/imgBtn3"
                android:layout_width="84dp"
                android:background="#FF0000"
                android:layout_height="84dp"
                android:layout_marginStart="50dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/imgBtn4"
                app:layout_constraintTop_toTopOf="@+id/imgBtn4"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/ic_baseline_power_settings_new_24" />

            <ImageButton
                android:id="@+id/imgBtn4"
                android:layout_width="84dp"
                android:background="#FF0000"
                android:layout_height="84dp"

                android:layout_marginStart="50dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/imgBtn1"
                app:layout_constraintTop_toTopOf="@+id/imgBtn1"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/ic_baseline_power_settings_new_24" />


            <ImageButton
                android:id="@+id/imgBtn5"
                android:layout_width="84dp"

                android:background="#008000"
                android:layout_height="84dp"
                app:layout_constraintStart_toStartOf="@+id/imgBtn2"
                app:layout_constraintTop_toTopOf="@+id/imgBtn6"
                app:srcCompat="@drawable/ic_baseline_power_settings_new_24" />

            <ImageButton
                android:id="@+id/imgBtn6"
                android:layout_width="84dp"

                android:layout_height="84dp"
                android:layout_marginStart="48dp"
                android:layout_marginTop="76dp"
                app:layout_constraintEnd_toEndOf="@+id/imgBtn1"
                app:layout_constraintStart_toEndOf="@+id/imgBtn5"
                app:layout_constraintTop_toBottomOf="@+id/imgBtn1"

                android:background="#008000"
                app:srcCompat="@drawable/ic_baseline_power_settings_new_24" />

            <ImageButton
                android:id="@+id/imgBtn7"
                android:layout_width="84dp"

                android:background="#008000"
                android:layout_height="84dp"
                android:layout_marginStart="52dp"
                android:layout_marginTop="76dp"
                app:layout_constraintBottom_toBottomOf="@+id/imgBtn6"
                app:layout_constraintEnd_toEndOf="@+id/imgBtn4"
                app:layout_constraintStart_toEndOf="@+id/imgBtn6"
                app:layout_constraintTop_toBottomOf="@+id/imgBtn4"
                app:srcCompat="@drawable/ic_baseline_power_settings_new_24" />

            <ImageButton
                android:id="@+id/imgBtn8"
                android:layout_width="84dp"
                android:background="#008000"

                android:layout_height="84dp"
                android:layout_marginTop="76dp"
                app:layout_constraintEnd_toEndOf="@+id/imgBtn3"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/imgBtn7"
                app:layout_constraintTop_toBottomOf="@+id/imgBtn3"
                app:srcCompat="@drawable/ic_baseline_power_settings_new_24" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </RelativeLayout>


</layout>