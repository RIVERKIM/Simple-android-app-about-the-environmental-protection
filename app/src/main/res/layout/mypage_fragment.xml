<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/mypageLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/mypageBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@drawable/ic_baseline_arrow_back_24"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userImageContainer"
            android:layout_alignParentStart="true"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">


                <TextView
                    android:id="@+id/mypage_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:background="@drawable/border_line"
                    android:layout_marginBottom="30dp"
                    android:drawableStart="@drawable/ic_baseline_email_24"
                    android:drawablePadding="10dp"
                    android:paddingLeft="5dp"
                    android:text="GaramKim"
                    android:textColor="#242526"
                    android:paddingBottom="5dp"

                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/mypage_money"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_line"
                    android:layout_marginBottom="30dp"
                    android:drawableStart="@drawable/ic_baseline_attach_money_24"
                    android:drawableTint="#ffd700"
                    android:drawablePadding="10dp"
                    android:paddingLeft="5dp"
                    android:text="100"
                    android:textColor="#242526"

                    android:textSize="25sp"
                    />

                <TextView
                    android:id="@+id/mypage_co2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_line"
                    android:layout_marginBottom="30dp"
                    android:drawableStart="@drawable/ic_baseline_co2_24"
                    android:drawablePadding="10dp"
                    android:paddingLeft="5dp"
                    android:drawableTint="@color/green"
                    android:text="GaramKim"
                    android:textColor="#242526"

                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/mypage_point"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_line"
                    android:layout_marginBottom="30dp"
                    android:drawableStart="@drawable/ic_baseline_credit_score_24"
                    android:drawablePadding="10dp"
                    android:paddingLeft="5dp"
                    android:textColor="#242526"
                    android:text="GaramKim"
                    android:textSize="25sp" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/userImageContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="80dp"
            >

            <ImageView
                android:id="@+id/userImage"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/circular_border"
                android:backgroundTint="#d3d3d3"
                android:src="@drawable/ic_baseline_person_24"
                />

        </LinearLayout>



    </RelativeLayout>

</layout>