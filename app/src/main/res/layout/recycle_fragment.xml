<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tt">

        <TextView
            android:id="@+id/recycleTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:text="Guess Recycle"
            android:textSize="40sp"
            />


        <Button
            android:id="@+id/rBtn1"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:layout_below="@+id/recycleTitle"
            android:layout_alignEnd="@+id/recycleTitle"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="323dp"
            android:tag="r"
            android:text="Recycle" />

        <Button
            android:id="@+id/rBtn2"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:layout_below="@+id/recycleTitle"
            android:layout_alignStart="@id/rBtn1"
            android:layout_alignBottom="@+id/rBtn1"
            android:layout_marginStart="193dp"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@+id/rBtn1"
            android:tag="g"
            android:text="Garbage" />

        <LinearLayout
            android:id="@+id/pic"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="260dp"
            android:layout_marginTop="224dp"
            android:background="@drawable/cc"
            android:orientation="vertical"
            android:padding="10dp">


        </LinearLayout>


    </RelativeLayout>


</layout>